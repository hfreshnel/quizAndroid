<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/img"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/img"
        android:supportsRtl="true"
        android:theme="@style/Theme.QuizAndroid"
        tools:targetApi="31">

        <!-- Actividades de featureAdminQuiz -->
        <activity
            android:name=".CreerQuizActivity"
            android:exported="false" />
        <activity
            android:name=".QuestionActivity"
            android:exported="true" />

        <!-- Actividades de main -->
        <activity
            android:name=".auth.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".auth.SignUpActivity"
            android:exported="false" />
        <activity
            android:name=".participant.ParticipantQuizActivity"
            android:exported="false" />
        <activity
            android:name=".participant.ParticipantListQuizActivity"
            android:exported="false" />
        <activity
            android:name=".admin.AdminQuizQuestionActivity"
            android:exported="false" />

        <!-- Define la actividad principal -->
        <activity
            android:name=".GetStartedActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
</manifest>
