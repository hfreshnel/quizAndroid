<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EAF6F6"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Title with Illustration -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="24dp">

            <ImageView
                android:id="@+id/register_illustration"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:src="@drawable/form"
                android:background="@drawable/rounded_image"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/register_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Créer votre compte"
                android:textSize="24sp"
                android:textColor="#333333"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="8dp" />
        </LinearLayout>

        <!-- Name Input -->

        <EditText
            android:id="@+id/input_first_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Prenom"
            android:inputType="textPersonName"
            android:background="@drawable/rounded_edittext_background"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="sans-serif" />
        <EditText
            android:id="@+id/input_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nom"
            android:inputType="textPersonName"
            android:background="@drawable/rounded_edittext_background"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="sans-serif" />


        <!-- Email Input -->
        <EditText
            android:id="@+id/input_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Addresse Email "
            android:inputType="textEmailAddress"
            android:background="@drawable/rounded_edittext_background"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="sans-serif" />

        <!-- Password Input -->
        <EditText
            android:id="@+id/input_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mot de passe"
            android:inputType="textPassword"
            android:background="@drawable/rounded_edittext_background"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="sans-serif" />

        <!-- Confirm Password Input -->


        <!-- Register Button -->
        <Button
            android:id="@+id/register_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Valider"
            android:backgroundTint="#00A896"
            android:textColor="#FFFFFF"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="16dp"
            android:padding="12dp"
            android:elevation="4dp" />

        <!-- Link to Login -->
        <TextView
            android:id="@+id/link_to_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vous etes déja notre client? Se Connecter"
            android:textSize="14sp"
            android:textColor="#00A896"
            android:fontFamily="sans-serif"
            android:layout_marginBottom="16dp"
            android:gravity="center" />
    </LinearLayout>
</ScrollView>
