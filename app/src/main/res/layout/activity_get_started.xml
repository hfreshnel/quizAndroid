<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#EAF6F6"
    android:gravity="center"
    android:padding="16dp">

    <!-- Cercle avec avatar -->
    <ImageView
        android:id="@+id/avatar_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/quizz"
        android:background="@drawable/circle_background"
        android:scaleType="centerInside" />

    <!-- Texte de bienvenue -->
    <TextView
        android:id="@+id/welcome_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bienvenue sur QuizTime,"
        android:textSize="18sp"
        android:textColor="#333333"
        android:layout_marginBottom="8dp"
        android:fontFamily="sans-serif-medium" />

    <!-- Description -->
    <TextView
        android:id="@+id/description_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="un jeu qui vous fera vous sentir mieux."
        android:textSize="16sp"
        android:textColor="#666666"
        android:layout_marginBottom="32dp"
        android:fontFamily="sans-serif" />

    <!-- Bouton principal -->
    <Button
        android:id="@+id/get_started_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Commencer"
        android:textAllCaps="false"
        android:backgroundTint="#00A896"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="16dp"
        android:fontFamily="sans-serif-medium"
        android:padding="12dp" />

    <!-- Bouton pour tester l'utilisateur -->


    <!-- Lien pour se connecter -->
    <TextView
        android:id="@+id/login_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vous avez déjà un compte ? Connectez-vous"
        android:textSize="14sp"
        android:textColor="#00A896"
        android:fontFamily="sans-serif"
        android:layout_marginBottom="16dp" />
</LinearLayout>
