<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#EAF6F6"
    tools:context=".GetQuizForAdminActivity">

    <!-- Bouton Se déconnecter -->
    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Se déconnecter"
        android:backgroundTint="#FF0000"
        android:textColor="#FFFFFF"
        android:layout_gravity="start"
        android:layout_marginBottom="16dp" />

    <!-- TextView aligné en haut à droite -->
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="-48dp"
        android:text="Admin"
        android:textSize="18sp"
        android:textColor="#000000" />

    <!-- Titre de la question -->
    <TextView
        android:id="@+id/tv_question_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="65dp"
        android:layout_marginTop="35dp"
        android:fontFamily="sans-serif-medium"
        android:text="Selectionner un quiz"
        android:textColor="#333333"
        android:textSize="18sp" />

    <!-- RecyclerView pour les quiz -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="16dp" />

    <!-- Boutons de navigation : Précédent et Suivant -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/btn_previous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="66dp"
            android:layout_marginBottom="17dp"
            android:backgroundTint="#00A896"

            android:text="Précédent" />

        <Button
            android:id="@+id/btn_next"
            android:layout_width="106dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="17dp"
            android:backgroundTint="#00A896"

            android:text="Suivant" />
    </LinearLayout>

    <!-- Bouton Créer un nouveau quiz -->
    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:backgroundTint="#00A896"
        android:text="Créer un nouveau quiz"
        android:layout_marginBottom="16dp"
        android:textColor="#FFFFFF" />

</LinearLayout>
